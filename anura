#!/bin/bash -e

cliName="anura"

cliHelp(){
    echo "
    This is a CLI for interacting with the Jfrog project Anura
    
    Usage: $cliName [command]
    
    Commands:
        ping    System Ping
        version System Version
        system  System Info
        help    Help
    "
    exit 1
}

case $1 in 
    ping)
        curl -u poisondart:cmVmdGtuOjAxOjE2ODc0NTYxNzk6eVQyS05CNExzeVZKMkZNc3FsN1VLWld6UGMz -XGET https://anura.jfrog.io/artifactory/api/system/ping
        ;;
    system)
        curl -u poisondart:cmVmdGtuOjAxOjE2ODc0NTYxNzk6eVQyS05CNExzeVZKMkZNc3FsN1VLWld6UGMz -XGET https://anura.jfrog.io/artifactory/api/system
        ;;
    version)
        curl -u poisondart:cmVmdGtuOjAxOjE2ODc0NTYxNzk6eVQyS05CNExzeVZKMkZNc3FsN1VLWld6UGMz -XGET https://anura.jfrog.io/artifactory/api/system/version
        ;;
    *)
        cliHelp
esac

exit 0

curl -v -u poisondart:cmVmdGtuOjAxOjE2ODc0NTYxNzk6eVQyS05CNExzeVZKMkZNc3FsN1VLWld6UGMz -XGET https://anura.jfrog.io/artifactory

